@model List<CategoryModel>
@{
    ViewData["Title"] = "Category Page";
}
@section Navbar{
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            @* <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">TokoWebApp</a> *@
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="IndexAdmin">Product</a>
                    </li>
                </ul>
            </div>
    </nav>
}
<h1>Product Type</h1>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i><span class="mx-2">Create New Product Type</span></a>
<div class="card shadow my-4">
    <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">All Product List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Jenis Barang</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>
                                <a class="btn btn-warning" asp-controller="Category" asp-route-id="@item.CategoryId" asp-action="Edit">Edit</a>
                                <a class="btn btn-danger" asp-controller="Category" asp-route-id="@item.CategoryId" asp-action="Delete" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/sb_admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/sb_admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script>
    $(function () {
        $("#example1").DataTable();
    });
    </script>
}
    

