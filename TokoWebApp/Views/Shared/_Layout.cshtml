<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TokoWebApp</title>

    <!-- Custom fonts for this template-->
    <link href="~/sb_admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/sb_admin/css/sb-admin-2.min.css" rel="stylesheet">
    @RenderSection("Style", required: false)
    @* <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.11.3/datatables.min.css"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TokoWebApp.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <div id="wrapper">
        @* Sidebar *@
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Toko Web App</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                All Action
            </div>

            <!-- Nav Item - Question Menu -->
            <li class="nav-item" id="sidebar-all-questions">
                <a class="nav-link" asp-controller="Category" asp-action="Index" >
                    <i class="fas fa-user"></i>
                    <span>Admin</span>
                </a>
            </li>
            <li class="nav-item" id="sidebar-all-questions">
                <a class="nav-link" asp-controller="Product" asp-action="Index" >
                    <i class="fas fa-shopping-cart"></i>
                    <span>Beli Barang</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>

        @* Main content *@
        <div id="content-wrapper" class="d-flex flex-column mt-3">
            <div id="content">
                @* Navbar *@
                    @RenderSection("Navbar", required:false)
                    
                
                <div class="container-fluid">                 
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div> 
    </div> 

    <!-- Bootstrap core JavaScript-->
    <script src="~/sb_admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/sb_admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/sb_admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/sb_admin/js/sb-admin-2.min.js"></script>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
